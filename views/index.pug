head
  style.
    body{
    min-height: 100%;
    margin:0;
    font-family: Arial, Helvetica, sans-serif;
    }
    
    header{
    padding-top: 1rem;
    padding-bottom: 1rem;
    padding-left: 1rem;
    padding-right: 1rem;
    display: flex;
    flex-direction:  row;
    background-color: #F6F9FC;
    justify-content: space-between;
    align-items: center;
    }
    
    .title{
    font-family: 'Gill Sans', 'Gill Sans MT', 'Calibri', 'Trebuchet MS', sans-serif;
    font-size: 2rem;
    color: black;
    }
    
    .controls{
    display: flex;
    flex-direction: row;
    }
    
    .control{
    margin-left: 0.5rem;
    }
    
    main{
    background-color: #2865E6;
    display: flex;
    flex-direction: column;
    align-items: center;
    }

    .tweet{
    width: 30rem;
    background-color:white ;
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0.5rem
    }

    form { 
        display: flex;
        flex-direction: column;

    }
    textarea {
        margin-bottom: 1rem;

    }
    inputarea {
        margin-bottom: 1rem;
        
    }


header
  .title ChitChat 
  .controls
    .control Login
    .control Register
    .control FAQ
main
    .tweet
        form(action = "/tweet" method="POST")
            textarea(name = "content", rows ="3")
            input(type="text", name="author")
            button(type="submit") Post!
    
    for tweet in tweets
        .tweet
            .content=tweet.content 
            small by #{tweet.author}



